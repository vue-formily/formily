{
  "name": "@vue-formily/formily",
  "version": "1.0.0-alpha.2",
  "description": "Simple, lightweight, and flexible schema-based form for Vue.js",
  "author": "An Ha",
  "license": "MIT",
  "module": "esm/index.js",
  "unpkg": "dist/formily.js",
  "main": "dist/formily.js",
  "types": "dist/formily.d.ts",
  "homepage": "https://vue-formily.netlify.app",
  "repository": "https://github.com/vue-formily/formily",
  "sideEffects": false,
  "keywords": [
    "vue",
    "validation",
    "form",
    "schema"
  ],
  "files": [
    "dist",
    "esm"
  ],
  "scripts": {
    "test": "NODE_ENV=test jest",
    "cover": "jest --coverage",
    "build": "node scripts/build.js",
    "lint": "eslint . '**/*.{js,jsx,ts,tsx}' --fix",
    "format": "prettier \"./**/*.ts\" --write",
    "prepare": "husky install",
    "commit": "git-cz"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.8",
    "@babel/core": "^7.12.9",
    "@babel/preset-env": "^7.12.7",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@vue/test-utils": "^1.2.2",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-prettier": "^3.4.1",
    "filesize": "^6.1.0",
    "flush-promises": "^1.0.2",
    "fs-extra": "^9.0.1",
    "gzip-size": "^6.0.0",
    "husky": "^7.0.2",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "rollup": "^2.34.2",
    "rollup-plugin-dts": "^2.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-typescript2": "^0.29.0",
    "shelljs": "^0.8.4",
    "terser": "^5.5.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "jest --maxWorkers=1 --bail --findRelatedTests"
    ],
    "*.js": [
      "eslint --fix",
      "jest --maxWorkers=1 --bail --findRelatedTests"
    ]
  },
  "dependencies": {
    "@vue-formily/util": "^0.1.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
